{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".", // Include files from the root (npm/)
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true, // Allow importing JSON modules
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "bin/**/*"], // Include both src and bin directories
  "exclude": ["node_modules", "dist"]
}